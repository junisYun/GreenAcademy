
public class Ex06 {
	public static void main(String[] args) {
		char n = 0x4444; // 0x4640;
		int mask = 0x8000; // ÀÌÁø¼ö : 1000 0000
		for(int i = 0; i < 16; i++) {
			System.out.print((n & mask) == mask ? "¡á " : "¡à ");
			if((i + 1) % 4 == 0) System.out.println();
			mask = mask >> 1;
		}
		System.out.println();
	}
}
