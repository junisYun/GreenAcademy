package kr.green.ex0610;

import java.util.Scanner;

public class OpEx05 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("정수 셋 입력 바람 : ");
		int x , y, z = 0;
		x = sc.nextInt();
		y = sc.nextInt();
		z = sc.nextInt();
		int sum = x+y+z;
		int avg = sum/3;
		System.out.printf("avg = %d\n", avg);
		System.out.printf("sum = %d", sum);
		
		sc.close();
	}
}
