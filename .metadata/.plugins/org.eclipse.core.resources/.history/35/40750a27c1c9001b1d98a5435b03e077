package kr.green.ex0610;

import java.util.Scanner;

public class OpEx05 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("정수 셋 입력 바람 : \n");
		int x , y, z = 0;
		x = sc.nextInt();
		y = sc.nextInt();
		z = sc.nextInt();
		System.out.printf("avg = %d\n", (x+y+z)/3);
		System.out.printf("sum = %d", x+y+z);
		
		sc.close();
	}
}
