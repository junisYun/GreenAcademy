package kr.green.ex0610;

import java.util.Scanner;

public class OpEx03 {
	public static void main(String[] args) {
			Scanner sc = new Scanner(System.in);
			System.out.println("정수 1개를 입력하시오: ");
			int n = sc.nextInt();
			
			System.out.println(n + '은'+ (n%2==0? "짝": "홀")+"수 입니다.");
			sc.close();
	}
}
